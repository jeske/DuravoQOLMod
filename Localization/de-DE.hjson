				Shiny: Glänzend
				SuperShiny: Super Glänzend
				Heavy: Schwer
			}

			// Multi-piece buff descriptions (plain text, code adds colors/formatting)
			BuffDescriptions: {
				Shiny: Nahe Erze und Edelsteine funkeln
				SuperShiny: Nahe Erze und Edelsteine funkeln (erweiterte Reichweite)
				Heavy: +15% Rückstoß und Rückstoß-Reflexion
			}

			// Chestplate-only bonuses (plain text, code adds colors/formatting)
			ChestBonuses: {
				Shield30HP: +30 HP Schild für 5s bei Treffer (60s Abklingzeit)
				Shield15Pct: 15% HP Schild für 10s bei Treffer (120s Abklingzeit, entfernt Debuffs)
				Speed15Pct: +15% Bewegungsgeschwindigkeit
			}
		}

		// ═══════════════════════════════════════════════════════════════════
